%section.page-title
  .page-title-square
  %h2.page-title-header Users
  .page-title-controls
    - if can? :manage, :user
      %section.invite
        = link_to "Invite a new User", new_user_invitation_path

%section#users.content
  %ul.users
    - @users.each do |user|
      %li.user
        / insert user image here
        = image_tag(user.profile.avatar.url(:mini), size: "20x20")
        = link_to user.email, user_path(user), title: "Check out #{user.full_name}"
        - if can? :manage, :user
          = link_to "(destroy)", user_path(user), method: :delete, confirm: "Are you sure?"
