= simple_form_for [@user, @profile] do |f|
  - if @profile.errors.any?
    #error_explanation
      %h2= "#{pluralize(@profile.errors.count, "error")} prohibited this profile from being saved:"
      %ul
        - @profile.errors.full_messages.each do |msg|
          %li= msg
  %fieldset
    = f.input :fname
    = f.input :lname
    = f.input :tel, as: :tel
    = f.input :school

  %fieldset
    %h5.hint please include the http:// or https:// prefix for all URLs
    = f.input :website,       as: :url
    = f.input :portfolio,     as: :url
    = f.input :blog,          as: :url
    = f.input :twitter_url,   as: :url, label: "Twitter", hint: "http://www.twitter.com/YOUR_TWITTER_UNSERNAME"
    = f.input :facebook_url,  as: :url, label: "Facebook"
    = f.input :google_url,    as: :url, label: "Google+"
    = f.input :linkdin_url,   as: :url, label: "LinkdIn"

  %fieldset
    = f.input :bio, as: :text

  .actions
    = f.button :submit, 'Save'

.form-links
  %h4 Account Detials
  - if @user == current_user
    = link_to "change your password", edit_user_registration_path
