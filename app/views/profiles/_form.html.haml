= simple_form_for @profile do |f|
  - if @profile.errors.any?
    #error_explanation
      %h2= "#{pluralize(@profile.errors.count, "error")} prohibited this profile from being saved:"
      %ul
        - @profile.errors.full_messages.each do |msg|
          %li= msg

  = f.input :fname
  = f.input :lname
  = f.input :bio, as: :text
  = f.input :tel, as: :tel
  = f.input :school_id

  .actions
    = f.submit 'Save'
